{
  "compilerOptions": {
    "target": "es2016",
    "module": "amd",
    "moduleResolution": "node",
    "sourceMap": true,
    "outFile": "./main.js",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "jsx": "react-native"
  },
  "include": [
    "src/**/*",
    "global.d.ts",
    "App.jsx"
  ],
  "exclude": [
    "node_modules/",
    "./tsconfig.json"
  ],
  "extends": "expo/tsconfig.base"
}
