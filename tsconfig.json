{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-native",
    "types": ["nativewind/types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,  
    "isolatedModules": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,   
  },  
  "include": [
    "src/**/*", 
    "App.tsx",     
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
